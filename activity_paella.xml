<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_background01"
    tools:context="co.nz.chiwicatering.chiwicatering.Paella">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paella"
        android:textColor="#ffffffff"
        style="@style/TextStyle"
        android:background="#61ffffff" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:textColor="#ffffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"/>
        <TextView
            android:textColor="#ffffffff"
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:layout_gravity="fill"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chicken_paella2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#ffffffff"
                    android:padding="10dp"
                    android:textSize="30dp"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="Chicken"/>
                <TextView
                    android:textColor="#ffffffff"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"/>
                <TextView
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"/>
                    <Button
                        android:onClick="decrement"
                        android:layout_marginLeft="16dp"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="-"/>
                    <TextView
                        android:textColor="#ffffffff"
                        android:id="@+id/quantity_text_view1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <Button
                        android:onClick="increment"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="+"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <CheckBox
                        android:textColor="#ffffffff"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="Add Chorizo"
                        android:padding="10dp"
                        android:id="@+id/checkboxChorizo"
                        android:onClick="checkboxChorizoOnClick"/>
                    <TextView
                        android:textColor="#ffffffff"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"/>
                    <TextView
                        android:textColor="#ffffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$3"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#ffffffff"
                    android:padding="10dp"
                    android:textSize="30dp"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="Sea Food"/>
                <TextView
                    android:textColor="#ffffffff"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"/>
                <TextView
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12"/>

            </LinearLayout>


            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"/>
                <TextView
                    android:id="@+id/quantity_text_view2"
                    android:textColor="#ffffffff"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add to My Order"
                android:onClick="addItToMyOrder"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>






